<UserControl x:Class="WendigoJaeger.TranslationTool.Controls.RelativePathPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WendigoJaeger.TranslationTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="800" x:Name="parentControl">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" x:Name="textPath" IsReadOnly="True" Text="{Binding ElementName=parentControl, Path=RelativePath}" />
        <Button Grid.Column="1" x:Name="buttonBrowse" Content="..." Click="buttonBrowse_Click" />
    </Grid>
</UserControl>
